{% extends 'base.html.twig' %}

{% block title %}Ajouter une recette{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
{% endblock %}

{% block body %}
    <h1>Ajouter votre recette</h1>
<div class="container">
    {{ form_start(form) }}
    <div class="form-row">
        <div class="form-group col-md-6 ">
            <p class="mb-0 mandatory">*</p>
            {{ form_errors(form.title) }}
            {{ form_widget(form.title) }}
        </div>
        <div class="form-group col-md-6">
            <p class="mb-0 mandatory">*</p>
            {{ form_errors(form.numberOfPerson) }}
            {{ form_widget(form.numberOfPerson) }}
            {{ form_help(form.numberOfPerson) }}
        </div>
    </div>
    <div class="form-row">
        <div class="fileUpload col-lg-6 align-self-end">
            <p class="mb-0 mandatory">*</p>
            {{ form_errors(form.imageFile) }}
            {{ form_widget(form.imageFile) }}
            {{ form_help(form.imageFile) }}
        </div>
        <div class="form-group col-lg-6">
            <p class="mb-0 mandatory">*</p>
            {{ form_errors(form.timeOfPreparation) }}
            {{ form_widget(form.timeOfPreparation) }}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6  ">
            <p class="mb-0 mandatory">*</p>
            {{ form_errors(form.ingredients) }}
            {{ form_widget(form.ingredients) }}
        </div>
        <div class="form-group col-md-6 ">
            <p class="mb-0 mandatory">*</p>
            {{ form_errors(form.kitchenUtensil) }}
            {{ form_widget(form.kitchenUtensil) }}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-12 ">
            <p class="mb-0 mandatory">*</p>
            {{ form_errors(form.instruction) }}
            {{ form_widget(form.instruction) }}
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-lg-6">
            <p class="mb-0 mandatory">*</p>
            {{ form_errors(form.recipeTypes) }}
            {{ form_widget(form.recipeTypes) }}
        </div>
        <div class="form-group col-lg-6 ">
            <p class="mb-0 mandatory">*</p>
            {{ form_errors(form.complexity) }}
            {{ form_widget(form.complexity) }}
        </div>
    </div>

    <div class="mt-4 d-flex justify-content-center">
        <button class="btn btn-primary mr-4" type="submit">
            Valider
        </button>
    </div>
    {{ form_end(form) }}

</div>
{% endblock %}


{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
<script>
    $(document).ready(function () {
        bsCustomFileInput.init()
    })
</script>
{% endblock %}
