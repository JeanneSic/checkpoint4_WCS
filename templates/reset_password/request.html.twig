{% extends 'base.html.twig' %}

{% block title %}Réinitialisation de votre mot de passe{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h1>Réinitialisation de votre mot de passe</h1>

    {{ form_start(requestForm) }}
    <div class="form-group d-flex flex-column mt-4">
        <div class="col-12 col-lg-6 align-self-center">
            {{ form_widget(requestForm.email) }}
            {{ form_help(requestForm.email)}}
        </div>
    </div>

    <div class="container d-flex flex-column mt-3">
        <button class="btn-primary btn btn-lg col-6 col-lg-2 mb-4 align-self-center">Envoyer</button>
    </div>
    {{ form_end(requestForm) }}
{% endblock %}
