{% extends 'base.html.twig' %}

{% block title %}JSI Recipe{% endblock %}

{% block body %}

    <h1 class="mt-4 mb-4"> Bienvenue sur JSI Recipe! </h1>
    <h2 class="h2-home mb-4">Découvrez de nombreuses recettes et partagez vos préférées avec la communauté !</h2>
    <div id="carouselExampleControls" class="carousel slide container mt-4" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="{{ asset('build/images/recettes/meal.jpg') }}" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="{{ asset('build/images/recettes/meal7.jpg') }}" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="{{ asset('build/images/recettes/meal2.jpg') }}" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
{% endblock %}
